@{ 
    var db = Database.Open("ScriptureJournal");
    var selectedData = db.Query("SELECT * FROM JournalEntries");
    var grid = new WebGrid(source: selectedData, rowsPerPage: 5);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>My Scripture Journal</title>
</head>
<body>
    <h1>Scriptures</h1>
    <form method="get">
        <div>
            <label for="searchBook">Book to look for:</label>
            <input type="text" name="searchBook" value="" />
            <input type="Submit" value="Search Book" /><br />
            (Leave blank to list all scriptures.)<br />
        </div>
    </form>
    <div>
        @grid.GetHtml(
            tableStyle: "grid",
            headerStyle: "head",
            alternatingRowStyle: "alt",
            columns: grid.Columns(
            grid.Column("Book"),
            grid.Column("Chapter"),
            grid.Column("Verse"),
            grid.Column("Note"),
            grid.Column("DateAdded")
        )
    )
    </div>
</body>
</html>
